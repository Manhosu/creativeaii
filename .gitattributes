# Git LFS Configuration para Creative API

# Bancos de dados SQLite
*.db filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.sqlite3 filter=lfs diff=lfs merge=lfs -text

# Arquivos de log grandes
*.log filter=lfs diff=lfs merge=lfs -text

# Cache do Python
__pycache__/ filter=lfs diff=lfs merge=lfs -text
*.pyc filter=lfs diff=lfs merge=lfs -text
*.pyo filter=lfs diff=lfs merge=lfs -text

# Arquivos de dados grandes
data/ filter=lfs diff=lfs merge=lfs -text
logs/ filter=lfs diff=lfs merge=lfs -text

# Arquivos CSV/Excel grandes
*.csv filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text

# Backups
backup/ filter=lfs diff=lfs merge=lfs -text
*.bak filter=lfs diff=lfs merge=lfs -text

# Arquivos tempor√°rios grandes
temp/ filter=lfs diff=lfs merge=lfs -text
tmp/ filter=lfs diff=lfs merge=lfs -text
